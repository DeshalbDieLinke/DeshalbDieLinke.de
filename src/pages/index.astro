---
import BaseHead from '../components/BaseHead.astro';
// import Header from '../components/Header.astro';
import Header from '../components/Header.tsx';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
;import Footer from '../components/Footer.tsx';

import Homepage from '@/components/Home/Homepage';


const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const subpath = pathname.match(/[^\/]+/g);



---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body >
		<!-- <Header /> -->
		<main>
			<Header client:load pathname={pathname} subpath={subpath} />
			<section id="home">
				<Homepage client:load />
			</section>
			<section id="intro" class="h-screen flex flex-col">
				<div class="flex items-center h-full bg-gray-100">
					<div class="bg-[var(--primary)] h-full flex items-center p-4 w-1/2 justify-center">
						<h1 class="text-6xl font-black text-white" id="hashtagDDL">#DeshalbDieLinke</h1>

					</div>
					<div class="h-full flex flex-col items-center p-8 w-1/2 justify-center">
						<div>
						<h1>Eine Ehrenamtliche Kampagne zur Bundestagswahl 2025.
						<h1>Hier könnt ihr:</h1>
							<ul class="list-disc">
								<li>Eine Gallarie an Offiziellen und Inoffiziellen Sharepics herunterladen</li>
								<li>Unsere Ziele und Forderungen entdecken</li>
								<li>Selbst Inhalte Hochladen. <a href="/register">Wie?</a></li>
								<li>Unsere Kampagne unterstützen</li>
								<li><a href="/weshalb">(Unsere alte Homepage sehen)</a></li>
							</ul>
						</div>
					</div>
				
				</div>
				<Footer client:load />

			</section>
		</main>
	</body>
</html>

<style>
	#hashtagDDL {
		color: white;
	}
</style>